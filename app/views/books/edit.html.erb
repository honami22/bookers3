  <h2>Editing Book</h2>
<!--<p>Find me in app/views/books/edit.html.erb</p>-->
  <%= flash[:notice] %>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body%>
  </br>
  <%= f.submit 'Update Book' %>
  </br>

  <div class = "botan">
   <%= link_to "Show", book_path(@book.id)  %>
   <% end %>

   |
   <%= link_to "Back",books_path %>
  </div>
</div>



